<ProdutoPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source:'icones/bg1.png'
        Label:
            id: usuario
            text: ''
            bold: True
            markup: True
            pos_hint:{'right':0.5, 'top':1}
            size_hint:0.8, 0.1

        ScrollView:
            pos_hint:{'right': 1, 'top':0.9}
            size_hint: 1, 1
            GridLayout:
                cols: 1
                id:lista_coleta
                size_hint_y: None
                spacing: 2, 2
                height: self.minimum_height
                row_default_height:'90dp'
                row_force_default:True

        Label:
            id:notificacao
            text: ''
            bold: True
            markup: True
            pos_hint:{'right':0.9, 'top':0.5}
            size_hint:0.8, 0.2
        GridLayout:
            rows:1
            pos_hint:{'right': 1,'top': 0.12}
            size_hint: 1, 0.12
            canvas:
                Color:
                    rgb:utils.get_color_from_hex('#006D7E')
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                id:baixar_coleta
                source:'icones/download.png'

            Label:


            ImageButton:
                id:mudar_tela
                source:'icones/voltar.png'